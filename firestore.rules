
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own documents.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Any authenticated user can read from the public stock prices collection.
    // The collection name is quoted because it contains a space.
    match /'saudi stock prices'/{stockId} {
      allow read: if request.auth != null;
    }

    // Allow any authenticated user to read from the deprecated stocks collection if it exists.
     match /stocks/{stockId} {
      allow read: if request.auth != null;
    }

    // Disallow any client-side writes to the errors collection for security.
    match /errors/{errorId} {
      allow read, write: if false;
    }
  }
}
