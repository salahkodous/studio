rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Protect user data: Only the authenticated user can read or write their own documents.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public stock data: Allow any authenticated user to read from the main stock price collection.
    // Writes are only performed by the backend service account.
    match /saudi stock prices/{stockId} {
        allow read: if request.auth != null;
        allow write: if false; // Disallow client-side writes
    }
  }
}
